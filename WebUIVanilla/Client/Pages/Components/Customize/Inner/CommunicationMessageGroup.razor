@using WebUIVanilla.Shared.Dto.Common

<MudGrid>
    <MudItem xs="12">
        @localizer["communicationmessage_hint"]
    </MudItem>
</MudGrid>
<MudGrid>
    <WebUIVanilla.Client.Pages.Components.Customize.Inner.CommunicationMessage 
        CustomMessage="@CustomMessageGroup.UpMessage"
        DisplayLabel="@localizer["communicationmessage_verbalmessageup"]"
